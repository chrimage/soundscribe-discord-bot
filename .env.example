# Discord Bot Configuration
DISCORD_TOKEN=your_discord_bot_token_here

# Groq API for transcription (optional)
GROQ_API_KEY=your_groq_api_key_here

# Domain Configuration
# For production: use your actual domain (e.g., yourdomain.com)
# For local testing: use soundscribe.local
DOMAIN=yourdomain.com

# Web Server Configuration (optional - defaults provided)
WEB_PORT=3000
WEB_HOST=0.0.0.0

# Audio Quality (optional)
AUDIO_QUALITY=192k

# Log Level (optional)
LOG_LEVEL=info

# Node Environment (optional)
NODE_ENV=production

# Legacy variable names for backwards compatibility
DISCORD_BOT_TOKEN=${DISCORD_TOKEN}
EXPRESS_PORT=${WEB_PORT}
BASE_URL=https://${DOMAIN}